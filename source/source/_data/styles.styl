// 背景图片
body {
	background-image: url('https://cdn.waixiwai.com/images/20191027010630.jpg');
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center top;
	background-attachment: fixed;
}

// 代码复制框
.highlight-wrap {
	box-shadow: unset;
}

// 隐藏顶部黑线
.headband {
  height: 0;
}

.post-body {
	font-size: 1em;
	
	// Markdown 标题样式
  h1, h2, h3, h4, h5, h6 {
  	font-weight: normal;
  	
    &:before {
    	width: 12px;
    	display: inline-block;
      margin-right: 6px;
      text-align: center;
      color: $orange;
    }
  }

  h1 {
    border-bottom: 1px solid $whitesmoke;
    padding-bottom: 0.3em
  }

  h2:before {
    content: '#';
  }

  h3:before {
    content: '|';
    position: relative;
    top: -1px;
  }

  h4:before {
    content: '!';
  }
  
  // 图片去除边框
	img {
	  border: 0;
	}
	
}

+mobile-small() {
  .post-body {
    // 居中引用 手机版修正
    > blockquote {
      margin: 40px 0;
    }
  }
}